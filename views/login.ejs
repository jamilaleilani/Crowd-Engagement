<!-- login.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <%- include partials/head  %>

  <!-- all page specific styles go here -->
  <title>Loud Crowd</title>
  <link rel="stylesheet" type="text/css" href="/styles/login.css">

</head>
<body>
  <%- include partials/nav %>
  <%- include partials/messages %>

  <div class="myform loginform">
    <h2>Login</h2>
    <form method="POST" action="/login">
      <div>
        <input type="text" name="username" class="checkForError formdiv" placeholder="Username">
        <p class="errorMessage">Please enter your username</p>
      </div>
      <div>
        <input type="password" name="password" class="checkForError formdiv" placeholder="Password">
        <p class="errorMessage">Please enter your password</p>
      </div>
      <div>
        <input type="submit" class="button formdiv submit">
      </div>
    </form>
  </div>

</body>
</html>
