<!-- landingpage.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <!-- set viewport to device width to make site responsive -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- fonts -->
  <link href="https://fonts.googleapis.com/css?family=Knewave|Varela+Round" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  <!-- custom styles -->
  <link rel="stylesheet" type="text/css" href="/styles/style.css">
  <link rel="stylesheet" type="text/css" href="/styles/landingpage.css">

  <!-- jquery -->
  <script src="/scripts/jquery-2.1.3.min.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>

  <title>Loud Crowd</title>
</head>
<body id="body">
  <nav id="topnav">
    <div>
      <a href="/about">about</a>
    <% if(!user) { %>
      <a href="/">sign up</a>
    </div>
    <div>
      <a href="/login">log in</a>
      <% } else { %>
      <a href="/logout">Log out</a>
    </div>
    <% } %>
  </nav>

  <h1>loud crowd</h1>
  <h2 class="landingpageh2">an app to show real time engagement during events</h2>
  <div class="myform">
    <h2>signup to add an event</h2>
    <form method="POST" action="/">
      <input type="text" name="username" class="" placeholder="Username">
      <input type="password" name="password" class="" placeholder="Password">
      <input type="submit" placeholder="sign up" class="button">
    </form>
  </div>

</body>
</html>
